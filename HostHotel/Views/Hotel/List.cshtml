@model List<Hotel>

<h1 class="display-4">Hotels list</h1>
<div class="input-group">
    <input type="text" class="form-control" aria-label="Text input with dropdown button">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filtrar Por</button>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-controller="Hotel" asp-action="FilterPerName">Nome</a>
            <div role="separator" class="dropdown-divider"></div>
            <a class="dropdown-item" asp-controller="Hotel" asp-action="FilterPerFacilities">Facilities</a>
        </div>
    </div>
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var h in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/img/download (1).jfif" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="First Slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/img/download.jfif" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Second Slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/img/banner-foto.jfif" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Third Slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Preview</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <div class="card-body">
                            <form class="form-inline">
                                <div class="form-group mx-sm-3 mb-2">
                                    <label>Name: </label>
                                    <input type="text" class="form-control" readonly value="@h.Name">
                                </div>
                                <div class="form-group mx-sm-3 mb-2">
                                    <label>Summary: </label>
                                    <input type="text" class="form-control" readonly value="@h.Summary">
                                </div>
                                <div class="form-group mx-sm-3 mb-2">
                                    <label>Address: </label>
                                    <input type="text" class="form-control" readonly value="@h.Address">
                                </div>
                                <div class="form-group mx-sm-3 mb-2">
                                    <label>Facilities: </label>
                                    <input type="text" class="form-control" readonly value="@h.Facilities">
                                </div>
                            </form>
                            <a asp-controller="Hotel" asp-action="Edit" asp-route-id="@h.Id"><button type="button" class="btn btn-primary">Edit</button></a>
                            <a asp-controller="Hotel" asp-action="Delete" asp-route-id="@h.Id"><button type="button" class="btn btn-danger">Delete</button></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_Scripts" />
}
